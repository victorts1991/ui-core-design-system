{
  "compilerOptions": {
    /* Base */
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    
    /* Outputs */
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "emitDeclarationOnly": false, /* tsup cuidará disso, mas o tsc precisa validar o código */

    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true,
    
    /* Interop */
    "esModuleInterop": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "allowSyntheticDefaultImports": true,

    /* Path Aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"] 
}